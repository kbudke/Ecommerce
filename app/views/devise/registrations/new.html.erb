<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h2>Sign Up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.email_field :email, placeholder: "Email Address", class: "form-control", autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, placeholder: "Password (#{@minimum_password_length} characters minimum)", class: "form-control", autocomplete: "off" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, placeholder: "Confirm Password", class: "form-control", autocomplete: "off" %>
      </div>

      <div class="form-group">
        <%= f.hidden_field :role, value: "guest" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign Up", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>


